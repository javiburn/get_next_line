#include <stdio.h>
#include <unistd.h>
#include <string.h>
#include <fcntl.h>
#include <stdlib.h>
#include "get_next_line.h"

static char	*ft_beg(char *s)
{
	int		n;
	char	*beg;

	n = 0;
	if (!s)
		return (NULL);
	while (s[n] != '\0')
	{
		if (s[n] == '\n')
			break ;
		n++;
	}
	if (s[n] != '\0')
		beg = ft_substr(s, n + 1, ft_strlen(s) - n + 1);
	if (s[n] == '\0')
		beg = ft_substr(s, 0, ft_strlen(s));
	free(s);
	//printf("\nBEG: %s\n", beg);
	return (beg);
}

static char	*ft_strip(char *str, char *full)
{
	int			n;
	int			i;
	char		*ret;
	static int	index = 0;

	n = 0;
	if (!str)
		return (NULL);
	while (str[n] != '\n' && str[n] != '\0')
		n++;
	n = n + 1;
	i = 0;
	while (full[i] != '\n' && full[i] != '\0')
		i++;
	if (i < (int)ft_strlen(full))
	{
		ret = (char *)malloc(i * sizeof(char) + 1);
		ft_strlcpy(ret, full, i + 1);
		return (ret);
	}
	if (full[0] == 0 || index == 0)
	{
		ret = (char *)malloc(n * sizeof(char));
		if (!ret)
			return (NULL);
		ft_strlcpy(ret, str, n + 1);
		index++;
	}
	else if (full[0] != 0 || index != 0)
	{
		ret = (char *)malloc((i + n + 2) * sizeof(char));
		ft_strlcpy(ret, full, i + 1);
		ft_strlcpy(ret + i, str, n + 1);
		//ret[n] = '\0';
	}
	free(full);
	return (ret);
}

static char	*ft_bufman(char *old_buffer, char *str)
{
	char	*aux;

	if (!str)
		return (NULL);
	aux = ft_strjoin(old_buffer, str);
	free(old_buffer);
	return (aux);
}

static char	*ft_reading(int fd)
{
	ssize_t		hola;
	char		*buf;
	char		*buffer;

	buffer = ft_calloc(1, 1);
	if (fd == -1)
		return (NULL);
	else
	{
		buf = (char *)malloc(BUFFER_SIZE * sizeof(char) + 1);
		if (!buf)
			return (NULL);
		hola = read(fd, buf, BUFFER_SIZE);
		buffer = ft_bufman(buffer, buf);
		while (hola > 0)
		{
			hola = read(fd, buf, BUFFER_SIZE);
			if (hola <= 0)
				return (NULL);
			buffer = ft_bufman(buffer, buf);
			if (ft_strchr(buf, '\n') != NULL)
				break ;
		}
		if (hola <= 0)
			return (NULL);
	}
	return (buffer);
}

char	*get_next_line(int fd)
{
	char		*s;
	char		*str;
	static char	*start;
	static int	i = 0;

	if (i == 0)
	{
		start = ft_calloc(BUFFER_SIZE + 1, sizeof(char));
		if (!start)
			return (NULL);
		i++;
	}
	s = ft_reading(fd);
	str = ft_strip(s, start);
	start = ft_beg(s);
	return (str);
}

int main()
{
	char	*ptr;
	int fd;
	int n = 0;
	//system("leaks -q a.out");
	fd = open("/Users/jsarabia/C_Cursus/get_next_line/hola.txt", O_RDONLY);
	while (n < 17)
	{
		ptr = get_next_line(fd);
		printf("S: %s", ptr);
		n++;
	}
	//system("leaks -q a.out");
	return (0);
}
